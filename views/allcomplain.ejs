<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/meta.ejs') %>
    <title>Home</title>
    <style>
      main {
        width: 900px;
      }
      table {
        width: 98%;
      }
      table,
      td,
      th {
        border: 1px solid rgb(162, 159, 159);
      }
      table {
        border-collapse: collapse;
      }

      th,
      td {
        padding: 0.35rem;
        text-align: left;
        border: 1px solid rgb(87, 86, 86);
        font-size: 20px;
      }

      /* td, th{
          padding: 5px 10px;
      } */
      thead th,
      tfoot th {
        background-color: whitesmoke;
        color: black;
      }
      thead th {
        font-size: 20px;
        height: 50px;
      }
      tbody tr:nth-child(even) td,
      tbody tr:nth-child(even) th {
        background-color: rgb(255, 250, 250);
      }
    </style>
  </head>
  <body>
    <%- include('partials/nav.ejs') %>
    <main>
      <h2>All Complain Request</h2>
      <table>
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Description</th>
            <th scope="col" colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% for(var order of orders){ %>
          <tr>
            <td><%= order.name %></td>
            <td><%= order.email %></td>
            <td><%- order.description %></td>
            <td><a href="/print/<%= order._id %>"> VIEW </a></td>
            <td><a href="/edit/<%= order._id %>"> EDIT </a></td>
            <td><a href="/delete/<%= order._id %>"> DELETE </a></td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </main>

    <%- include('partials/footer.ejs') %>
  </body>
</html>
